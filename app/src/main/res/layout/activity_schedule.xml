<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity"
    android:background="@drawable/hot_bg"
    android:layout_marginLeft="5dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_iv_back"
        android:src="@mipmap/icon_back"
        android:layout_marginTop="20dp"/>

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_dp"
        android:calendarViewShown="false"
        android:gravity="center"
        android:layout_below="@+id/schedule_iv_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_btn_add"
        android:layout_below="@+id/schedule_dp"
        android:text="添加日程"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_lv"
        android:layout_below="@+id/schedule_btn_add"/>




</RelativeLayout>